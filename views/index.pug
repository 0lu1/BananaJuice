extends layout

block content
  #navbarHeader.collapse.bg-inverse
    .container
      .row
        .col-sm-8.py-4
          h4.text-white Banana Juice
          p.text-muted
            | Add some information about the album below, the author, or any other background context. 
            | Make it a few sentences long so folks can pick up some informative tidbits. 
            | Then, link them off to some social networking sites or contact information.
        .col-sm-4.py-4
          h4.text-white Contact
          ul.list-unstyled
            li
              a.text-white(href="#") Follow on Twitter
            li
              a.text-white(href="#") Like on Facebook
            li
              a.text-white(href="#") Email me
  .navbar.navbar-inverse.bg-inverse
    .container.d-flex.justify-content-between
      a.navbar-brand(href="#") Banana Juice
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon 
  section.jumbotron.text-center
    .container
      h1.jumbotron-heading Album example
      p.lead.text-muted
        | Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.
      p
        a.btn.btn-primary(href="/") Home
        a.btn.btn-secondary(href="/") Home
  section.album.text-muted#album
    .container
      .row
        unless bee
          script(src="/socket.io/socket.io.js")
          script.
            var socket = io('//localhost:3000');
            socket.on('socketToMe', function (data) {
              console.log(data);
              socket.emit("chat message", "Hello there general");
              socket.on("disconnect", function(){
                console.log("user disconnected");
              })
            });
          each val in results
            .card
              a(href="/bees?name=" + val.name + "#album")
                img(src=("images/" + val.thumbnail), alt=val.name)
                h3=val.name
                //- https://github.com/onedesign/express-socketio-tutorial

                p.card-text
                  if val.desc.length > 50
                    | #{val.desc.substring(0,50)} . . .
                  else
                    | #{val.desc}
      if bee
        each val in results
          if val.name === type.name
            video.videoInsert(controls='', autoplay='', onmouseover='dataset.over=true;controls=true', onmouseout='delete dataset.over;if(paused) controls=false;', onplay='controls=true', onpause='if(!dataset.over && !dataset.focus) controls=false', onfocusin='dataset.focus=true; controls=true', onfocusout='delete dataset.focus; if(paused) controls=false;')
              source(src="videos/" + val.path, type='video/mp4')
              |   Your browser does not support the video tag.
            h3=val.name
            p.card-text
              | #{val.desc}
  if bee
    section.comments.text-center
      h3 this is the comment section :)
      form(action="#comments", method="post", id="commentForm")
        textarea(name="comment", id="comment" cols="50", rows="5")
        input(type="submit", value="Comment")
      for result in results
        p=result.comments
  footer.text-muted
    .container
      p.float-right
        a(href="#") Back to top
      p Album example is © Bootstrap, but please download and customize it for yourself!
      p
        | New to Bootstrap? 
        a(href="../../") Visit the homepage
        |  or read our 
        a(href="../../getting-started/") getting started guide
        | .
