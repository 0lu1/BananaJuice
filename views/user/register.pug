extends ../layout

block content
    .row.mt-5
        .col-md-6.m-auto
            h1.text-center.mb-3
                i.fas.fa-user-plus
                |  Register
            if (typeof errors != "undefined")
                div
                    each error in errors
                        =error
            form(action='/users/register' method='POST')
                .form-group
                    label(for='name') Name
                    input#name.form-control(type='name' name='name' placeholder='Enter Name' value=name)
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='email' name='email' placeholder='Enter Email' value=email)
                .form-group
                    label(for='password') Password
                    input#password.form-control(type='password' name='password' placeholder='Create Password' )
                .form-group
                    label(for='password2') Confirm Password
                    input#password2.form-control(type='password' name='password2' placeholder='Confirm Password' )
                button.btn.btn-primary.btn-block(type='submit')
                    | Register
            p.lead.mt-4
                | Have An Account?
                a(href='/users/login') Login
